<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/title_symptom_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom Check"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Question Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <!-- Q1 -->
            <TextView
                android:text="Can you speak full sentences?"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/q1_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q1_yes" android:text="Yes"/>
                <RadioButton android:id="@+id/q1_no" android:text="No"/>
            </RadioGroup>

            <!-- Q2 -->
            <TextView
                android:text="Do you see your chest pulling in?"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/q2_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q2_yes" android:text="Yes"/>
                <RadioButton android:id="@+id/q2_no" android:text="No"/>
            </RadioGroup>

            <!-- Q3 -->
            <TextView
                android:text="Are your lips or nails blue or gray?"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/q3_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q3_yes" android:text="Yes"/>
                <RadioButton android:id="@+id/q3_no" android:text="No"/>
            </RadioGroup>

            <!-- Q4 -->
            <TextView
                android:text="Have you used your rescue medicine yet?"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/q4_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q4_yes" android:text="Yes"/>
                <RadioButton android:id="@+id/q4_no" android:text="No"/>
            </RadioGroup>

            <!-- Q5 -->
            <TextView
                android:text="Do you feel dizzy or scared?"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/q5_group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/q5_yes" android:text="Yes"/>
                <RadioButton android:id="@+id/q5_no" android:text="No"/>
            </RadioGroup>

        </LinearLayout>

        <!-- PEF Prompt -->
        <TextView
            android:id="@+id/pef_prompt"
            android:text="Would you like to check your breathing strength (PEF)?\nThis helps us see your zone."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_check_pef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, check PEF"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/tv_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is guidance, not a diagnosis. If in doubt, call emergency!"
            android:textSize="12sp"
            android:textColor="#808080"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
</ScrollView>
