<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant95"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/titleDailyCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Daily Check-In"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Night Waking -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Night Waking"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/nightWakingGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/nightWakingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/nightWakingNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <!-- Activity Limits -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Activity Limits"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/activityLimitGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/activityLimitYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/activityLimitNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <!-- Cough / Wheeze -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Cough / Wheeze"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/coughWheezeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/coughNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/coughMild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mild" />

            <RadioButton
                android:id="@+id/coughModerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderate" />

            <RadioButton
                android:id="@+id/coughSevere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severe" />
        </RadioGroup>

        <!-- Triggers -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Triggers (choose all that apply)"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/triggerExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise" />

        <CheckBox
            android:id="@+id/triggerColdAir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cold air" />


        <CheckBox
            android:id="@+id/triggerDust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dust" />

        <CheckBox
            android:id="@+id/triggerPets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pets" />

        <CheckBox
            android:id="@+id/triggerSmoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoke" />

        <CheckBox
            android:id="@+id/triggerIllness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illness" />

        <CheckBox
            android:id="@+id/triggerCleaners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaners" />

        <CheckBox
            android:id="@+id/triggerOdors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfume/Strong Odors" />



        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            android:text="Save" />

    </LinearLayout>

</ScrollView>
