<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:strokeColor="@color/black"
    app:strokeWidth="1dp"

    tools:context=".ParentInventoryAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_group_padding"
        android:background="@color/bg1">

        <View
            android:id="@+id/vertDivider_1"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:layout_marginHorizontal="3dp"

            app:layout_constraintHorizontal_bias="0.3"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/vertDivider_2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:layout_marginHorizontal="3dp"

            app:layout_constraintHorizontal_bias="0.68"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/childName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/nameFontSize"
            android:textStyle="bold"

            android:maxLines="2"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="high_quality"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/lowControllerAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller low"
            android:textColor="@color/zone_red"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/childName"/>

        <TextView
            android:id="@+id/lowRescueAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue low"
            android:textColor="@color/zone_red"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lowControllerAlert"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateInventoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@color/black"

            android:backgroundTint="@color/bg3"
            app:shapeAppearanceOverlay="@style/material_button_style_1"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"

            app:layout_constraintVertical_bias="1"
            android:layout_marginEnd="@dimen/view_group_padding"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertDivider_1"
            app:layout_constraintTop_toBottomOf="@id/lowRescueAlert"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/controllerField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller reserve:\n#n / #m"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginStart="5dp"

            app:layout_constraintStart_toEndOf="@id/vertDivider_1"
            app:layout_constraintBaseline_toBaselineOf="@id/childName"/>

        <TextView
            android:id="@+id/purchaseDateController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="purchaseDate"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginTop="5dp"

            app:layout_constraintStart_toStartOf="@id/controllerField"
            app:layout_constraintTop_toBottomOf="@id/controllerField"/>

        <TextView
            android:id="@+id/expiryDateController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expiryDate"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginTop="5dp"

            app:layout_constraintStart_toStartOf="@id/controllerField"
            app:layout_constraintTop_toBottomOf="@id/purchaseDateController"/>

        <TextView
            android:id="@+id/rescueField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue reserve:\n#n / #m"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"

            app:layout_constraintStart_toEndOf="@id/vertDivider_2"
            app:layout_constraintBaseline_toBaselineOf="@id/childName"/>

        <TextView
            android:id="@+id/purchaseDateRescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="purchaseDate"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginTop="5dp"

            app:layout_constraintStart_toStartOf="@id/rescueField"
            app:layout_constraintTop_toBottomOf="@id/rescueField"/>

        <TextView
            android:id="@+id/expiryDateRescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expiryDate"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginTop="5dp"

            app:layout_constraintStart_toStartOf="@id/rescueField"
            app:layout_constraintTop_toBottomOf="@id/purchaseDateRescue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>