<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/pefTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peak Flow (PEF)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/pefInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Peak Flow number. The app will calculate today's zone based on your Personal Best."
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- PB display -->
        <TextView
            android:id="@+id/personalBestLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PB: --"
            android:textSize="18sp"
            android:paddingBottom="24dp" />

        <!-- MAIN PEF INPUT -->
        <EditText
            android:id="@+id/inputPEF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter PEF value"
            android:inputType="number"
            android:textSize="18sp"
            android:padding="8dp" />

        <!-- Toggle for Pre/Post-med optional values -->
        <CheckBox
            android:id="@+id/togglePrePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pre/Post-med values (optional)"
            android:paddingTop="12dp" />

        <!-- Optional Pre/Post-med inputs -->
        <LinearLayout
            android:id="@+id/prePostContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="12dp">

            <EditText
                android:id="@+id/inputPreMedPEF"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Pre-med PEF"
                android:inputType="number"
                android:padding="8dp" />

            <EditText
                android:id="@+id/inputPostMedPEF"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Post-med PEF"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Submit button -->
        <Button
            android:id="@+id/submitPEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp" />

        <!-- Zone result -->
        <TextView
            android:id="@+id/zoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zone: -"
            android:textSize="20sp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp" />

        <!-- Color display -->
        <View
            android:id="@+id/zoneColor"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#DDDDDD" />

        <!-- History Title -->
        <TextView
            android:id="@+id/historyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="32dp" />

        <!-- Scrollable container -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:padding="8dp" />
        </ScrollView>


    </LinearLayout>
</ScrollView>
