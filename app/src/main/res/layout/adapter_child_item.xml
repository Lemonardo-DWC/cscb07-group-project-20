<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:strokeColor="@color/black"
    app:strokeWidth="1dp"

    tools:context=".ParentHomeChildItemAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_group_padding"
        android:background="@color/bg1">

        <TextView
            android:id="@+id/childName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/nameFontSize"
            android:textStyle="bold"

            android:maxLines="2"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="high_quality"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detailsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="More Details"
            android:textColor="@color/black"

            android:backgroundTint="@color/bg3"
            app:shapeAppearanceOverlay="@style/material_button_style_1"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"

            android:layout_marginEnd="5dp"
            app:layout_constraintVertical_bias="1"

            app:layout_constraintTop_toBottomOf="@id/childName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/childName"
            app:layout_constraintEnd_toEndOf="@id/childName"/>

        <View
            android:id="@+id/vertDivider_1"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:layout_marginHorizontal="3dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/childName"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/todayZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY_ZONE"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginStart="10dp"

            app:layout_constraintStart_toEndOf="@id/childName"
            app:layout_constraintBaseline_toBaselineOf="@id/childName"/>

        <ImageView
            android:id="@+id/todayZoneStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"

            android:src="@drawable/zone_green"

            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintStart_toEndOf="@id/todayZone"
            app:layout_constraintTop_toTopOf="@id/todayZone"
            app:layout_constraintBottom_toBottomOf="@id/todayZone"/>

        <TextView
            android:id="@+id/lastRescuetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lastRescuetime"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"

            app:layout_constraintStart_toEndOf="@id/childName"
            app:layout_constraintTop_toBottomOf="@id/todayZone"/>

        <TextView
            android:id="@+id/weeklyRescueCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weeklyRescueCount"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:breakStrategy="simple"

            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"

            app:layout_constraintStart_toEndOf="@id/childName"
            app:layout_constraintTop_toBottomOf="@id/lastRescuetime"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>