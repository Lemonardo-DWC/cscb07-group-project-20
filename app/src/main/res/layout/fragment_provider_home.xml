<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2"
    tools:context=".ProviderHomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/provider_dashboard_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:icon="@drawable/menu_button"
                app:iconTint="@null"
                app:iconSize="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/btn_press_colors"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:padding="0dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/screenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/menu_button"
                app:layout_constraintTop_toTopOf="@id/menu_button"
                app:layout_constraintBottom_toBottomOf="@id/menu_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Shared Children Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sharedChildrenSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/provider_dashboard_navigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg4"
            android:padding="@dimen/view_group_padding">

            <TextView
                android:id="@+id/sharedChildrenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shared Children"
                android:textSize="@dimen/fontSizeSubTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/providerChildRecycler"
                android:layout_width="388dp"
                android:layout_height="549dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg3"
                android:padding="@dimen/view_group_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sharedChildrenTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Trend Chart Section -->
</androidx.constraintlayout.widget.ConstraintLayout>