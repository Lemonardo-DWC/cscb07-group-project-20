<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    tools:context=".ParentHomeFragment"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parent_dashboard_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"

            android:background="@color/bg1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_button"
                android:contentDescription="menu button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:icon="@drawable/menu_button"
                app:iconTint="@null"
                app:iconSize="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/btn_press_colors"

                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:padding="0dp"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/screenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"

                app:layout_constraintStart_toEndOf="@id/menu_button"
                app:layout_constraintTop_toTopOf="@id/menu_button"
                app:layout_constraintBottom_toBottomOf="@id/menu_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ################################################## -->

    <!-- alert section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alertSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parent_dashboard_navigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alertTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/alertRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:padding="@dimen/view_group_padding"
                        android:background="@color/bg3"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- child status section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/childStatusSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertSection">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <TextView
                android:id="@+id/childStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children Status"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/childStatusTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/childRecycler"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        android:padding="@dimen/view_group_padding"
                        android:background="@color/bg3"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- trend chart section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/trendChartSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintTop_toBottomOf="@id/childStatusSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <TextView
                android:id="@+id/tendChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trends"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/trendRangeToggleGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/buttonSevenDay"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSevenDay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:text="7 Day"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"

                    app:shapeAppearanceOverlay="@style/material_button_style_1"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/btn_toggle_colors"
                    android:elevation="4dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonThirtyDay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:text="30 Day"

                    android:insetTop="0dp"
                    android:insetBottom="0dp"

                    app:shapeAppearanceOverlay="@style/material_button_style_1"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:backgroundTint="@color/btn_toggle_colors"
                    android:elevation="4dp"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginTop="10dp"
                android:padding="@dimen/view_group_padding"

                app:layout_constraintTop_toBottomOf="@id/trendRangeToggleGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg8"

                    android:id="@+id/pefTrendChart"/>

            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>