<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChildDetailsFragment"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/child_details_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"

            android:background="@color/bg1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/child_details_back_button"
                android:contentDescription="back button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:icon="@drawable/back_button"
                app:iconTint="@null"
                app:iconSize="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/btn_press_colors"

                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:padding="0dp"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/screenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHILD NAME"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"

                app:layout_constraintStart_toEndOf="@id/child_details_back_button"
                app:layout_constraintTop_toTopOf="@id/child_details_back_button"
                app:layout_constraintBottom_toBottomOf="@id/child_details_back_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/basicInformationSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_details_navigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <TextView
                android:id="@+id/basicInformationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintWidth_max="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editNoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Note"
                android:textColor="@color/black"

                android:backgroundTint="@color/bg3"
                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/childRecycler"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"

                    android:backgroundTint="@color/bg3"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editNoteButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/basicInfoField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/view_group_padding">

                    <TextView
                        android:id="@+id/firstNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="firstName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/middleNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="middleName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/firstNameField"/>

                    <TextView
                        android:id="@+id/lastNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lastName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/middleNameField"/>

                    <View
                        android:id="@+id/vertDivider_1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"

                        app:layout_constraintHorizontal_bias="0.55"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/birthdayField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="birthdayField"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/vertDivider_1"/>

                    <TextView
                        android:id="@+id/sexField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sexField"

                        app:layout_constraintTop_toBottomOf="@id/birthdayField"
                        app:layout_constraintStart_toEndOf="@id/vertDivider_1"/>

                    <View
                        android:id="@+id/horDivider_1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"

                        android:background="@color/black"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lastNameField"/>

                    <TextView
                        android:id="@+id/noteField"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"

                        android:text="Optional notes..."

                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:breakStrategy="high_quality"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horDivider_1"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otherInformationSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicInformationSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <TextView
                android:id="@+id/otherInformationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Information"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintWidth_max="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/otherButtonViewGroup"
                app:layout_constraintWidth_max="100dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:backgroundTint="@color/bg1"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"

                app:layout_constraintTop_toTopOf="@id/otherInformationViewGroup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/view_group_padding">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSetPb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Set PB"
                        android:textColor="@color/black"

                        android:backgroundTint="@color/bg3"
                        app:shapeAppearanceOverlay="@style/material_button_style_1"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewHistoryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View History"
                        android:textColor="@color/black"
                        android:padding="5dp"

                        android:backgroundTint="@color/bg3"
                        app:shapeAppearanceOverlay="@style/material_button_style_1"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp"

                        app:layout_constraintTop_toBottomOf="@id/buttonSetPb"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/otherInformationViewGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                android:backgroundTint="@color/bg3"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/otherButtonViewGroup"
                app:layout_constraintTop_toBottomOf="@id/otherInformationTitle"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/otherInformationField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/view_group_padding">

                    <TextView
                        android:id="@+id/personalBest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal best: #n"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    
                    <TextView
                        android:id="@+id/latestDailyCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Last check in - hh:mm, dd/MM\n    Activity Limit: y/n\n    Cough/wheeze: y/n\n    Night waking: y/n\n    Triggers: #n"

                        app:layout_constraintTop_toBottomOf="@id/personalBest"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/latestControllerLog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Last controller log - hh:mm, dd/MM\n    Doses - #n"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latestDailyCheckIn"/>

                    <TextView
                        android:id="@+id/latestRescueLog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Last rescue log - hh:mm, dd/MM\n    Dose - #n\n    Pre/post rating - #n/#n\n    Post status - TEXT"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latestControllerLog"/>

                    <TextView
                        android:id="@+id/latestPefLog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Last PEF log - hh:mm, dd/MM\n    PEF - #n"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latestRescueLog"/>

                    <TextView
                        android:id="@+id/latestTriageSession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Last triage session - hh:mm, dd/MM\n    Blue lips/nails: y/n\n    Chest pulling in: y/n\n    Dizzy/scared: y/n\n    Red flag: y/n\n    Speak in full sentences: y/n\n    Used rescure medication: y/n"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latestPefLog"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>