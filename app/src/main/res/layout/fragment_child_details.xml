<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChildDetailsFragment"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/pastel_pink_1">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/child_details_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"

            android:background="@color/pastel_blue_1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/child_details_back_button"
                android:contentDescription="back button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:icon="@drawable/back_button"
                app:iconTint="@null"
                app:iconSize="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/btn_press_colors"

                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:padding="0dp"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/screenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHILD NAME"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"

                app:layout_constraintStart_toEndOf="@id/child_details_back_button"
                app:layout_constraintTop_toTopOf="@id/child_details_back_button"
                app:layout_constraintBottom_toBottomOf="@id/child_details_back_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/childStatusSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_details_navigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"
            android:background="@color/pastel_green_1">

            <TextView
                android:id="@+id/basicInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintWidth_max="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editNoteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Note"
                android:textColor="@color/black"

                android:backgroundTint="@color/pastel_purple_1"
                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/childRecycler"
                    android:layout_width="0dp"
                    android:layout_height="275dp"
                    android:layout_marginTop="10dp"

                    android:backgroundTint="@color/pastel_purple_1"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editNoteButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/basicInfoField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/view_group_padding">

                    <TextView
                        android:id="@+id/firstNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="firstName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/middleNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="middleName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/firstNameField"/>

                    <TextView
                        android:id="@+id/lastNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lastName"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/middleNameField"/>

                    <View
                        android:id="@+id/vertDivider_1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"

                        app:layout_constraintHorizontal_bias="0.55"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/birthdayField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="birthdayField"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/vertDivider_1"/>

                    <TextView
                        android:id="@+id/sexField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sexField"

                        app:layout_constraintTop_toBottomOf="@id/birthdayField"
                        app:layout_constraintStart_toEndOf="@id/vertDivider_1"/>

                    <View
                        android:id="@+id/horDivider_1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"

                        android:background="@color/black"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lastNameField"/>

                    <TextView
                        android:id="@+id/noteField"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"

                        android:text="Optional notes..."

                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:breakStrategy="high_quality"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horDivider_1"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>