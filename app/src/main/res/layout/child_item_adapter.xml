<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ChildItemAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_group_padding"
        android:background="@color/bg1">

        <TextView
            android:id="@+id/childName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/nameFontSize"
            android:textStyle="bold"
            android:maxWidth="110dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:maxLines="2"
            android:breakStrategy="simple"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:layout_marginHorizontal="3dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/childName"/>

        <TextView
            android:id="@+id/tempInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILLER TEXT"

            android:layout_marginStart="10dp"

            app:layout_constraintStart_toEndOf="@id/childName"
           app:layout_constraintBaseline_toBaselineOf="@id/childName"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>