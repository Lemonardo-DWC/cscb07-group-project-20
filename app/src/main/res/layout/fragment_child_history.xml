<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChildHistoryFragment"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/manage_children_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_group_padding"

            android:background="@color/bg1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/history_back_button"
                android:contentDescription="back button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:icon="@drawable/back_button"
                app:iconTint="@null"
                app:iconSize="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/btn_press_colors"

                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:padding="0dp"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/screenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child's History"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"

                app:layout_constraintStart_toEndOf="@id/history_back_button"
                app:layout_constraintTop_toTopOf="@id/history_back_button"
                app:layout_constraintBottom_toBottomOf="@id/history_back_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/childStatusSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manage_children_navigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_group_padding"
            android:background="@color/bg4">

            <!-- History Range -->
            <TextView
                android:id="@+id/rangeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:text="History Range"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/rangeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/rangeTitle"
                app:layout_constraintStart_toStartOf="@id/rangeTitle"
                app:layout_constraintEnd_toEndOf="@id/rangeTitle"/>

            <!-- Log Type-->
            <TextView
                android:id="@+id/logTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Log Type"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/triggerFilterTitle"/>

            <Spinner
                android:id="@+id/logTypeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:spinnerMode="dropdown"

                app:layout_constraintTop_toBottomOf="@id/logTypeTitle"
                app:layout_constraintStart_toStartOf="@id/logTypeTitle"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Symptom Filter -->
            <TextView
                android:id="@+id/symptomFilterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"

                android:text="Symptom Filter"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rangeSpinner"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/symptomFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Filters: #n"
                android:textColor="@color/black"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                android:backgroundTint="@color/bg3"

                app:layout_constraintTop_toBottomOf="@id/symptomFilterTitle"
                app:layout_constraintStart_toStartOf="@id/symptomFilterTitle"
                app:layout_constraintEnd_toEndOf="@+id/symptomFilterTitle"/>

            <TextView
                android:id="@+id/triggerFilterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"

                android:text="Trigger Filter"
                android:textSize="@dimen/fontSizeSubTitle"

                app:layout_constraintBaseline_toBaselineOf="@id/symptomFilterTitle"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/triggerFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Filters: #n"
                android:textColor="@color/black"

                app:shapeAppearanceOverlay="@style/material_button_style_1"
                android:backgroundTint="@color/bg3"

                app:layout_constraintTop_toBottomOf="@id/triggerFilterTitle"
                app:layout_constraintStart_toStartOf="@id/triggerFilterTitle"
                app:layout_constraintEnd_toEndOf="@id/triggerFilterTitle"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="200dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/historyListRecycler"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="@dimen/view_group_padding"
                        android:background="@color/bg3"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>